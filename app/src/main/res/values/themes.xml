<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoginsandRegisterDesignXML" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_logo</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="EditTextGeneral" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="Theme.LoginsandRegisterDesignXML.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LoginsandRegisterDesignXML.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LoginsandRegisterDesignXML.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>